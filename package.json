{
  "name": "drimchansky.dev",
  "type": "module",
  "version": "2.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "env": "cat .env.example > .env",
    "test:e2e:docker": "docker-compose up playwright-tests",
    "test:e2e:docker-update-snapshots": "docker-compose up playwright-update-snapshots",
    "test:e2e:docker-clean": "docker-compose down --volumes --remove-orphans && docker system prune -f",
    "lint": "astro check && eslint .",
    "format": "prettier --write . && eslint --fix .",
    "test:local": "astro check && eslint . && pnpm test:e2e:docker"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/markdown-remark": "^6.3.8",
    "@astrojs/mdx": "^4.3.9",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "^3.6.0",
    "@csstools/postcss-oklab-function": "^4.0.12",
    "astro": "^5.15.3",
    "astro-icon": "^1.1.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "focus-trap": "^7.6.6",
    "markdown-it": "^14.1.0",
    "normalize.css": "^8.0.1",
    "postcss-html": "^1.8.0",
    "postcss-mixins": "^12.1.2",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.4.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "1.56.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.9.2",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/parser": "^8.46.2",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.39.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-astro": "^1.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.25.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0",
    "typescript-eslint": "^8.46.2"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.34.3"
    },
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    },
    "ignoredBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
