{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/shared/*": ["src/shared/*"],
      "@/components/*": ["src/components/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".vercel", "public", "playwright-report"]
}
