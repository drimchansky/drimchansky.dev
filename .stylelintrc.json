{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-css-modules",
    "stylelint-config-idiomatic-order"
  ],
  "rules": {
    "selector-nested-pattern": "^&",
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["define-mixin", "mixin"]
    }],
    "no-descending-specificity": null
  },
  "plugins": [
    "stylelint-order"
  ]
}
