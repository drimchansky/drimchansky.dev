---
import { Icon } from 'astro-icon/components'

import { siteInfo } from '@/data/site-info'
import { t } from '@/i18n'

import TypographyH1 from '../typography/TypographyH1.astro'
import TypographySpan from '../typography/TypographySpan.astro'
---

<header class="header">
  <div class="profile">
    <TypographyH1 class="header-name">{t(Astro.currentLocale, 'fullName')}</TypographyH1>
    <TypographySpan class="location-text">{t(Astro.currentLocale, 'location')}</TypographySpan>
  </div>

  <div class="contacts">
    <ul class="contacts-list">
      {
        siteInfo.socialLinks.map(({ content, id, name, showOnResumePage, url }) => {
          return (
            showOnResumePage && (
              <li class="contacts-item">
                <Icon class="" name={id} aria-hidden="true" />
                <a
                  class="contacts-link"
                  href={url}
                  itemprop={name === 'Email' || name === 'E-mail' ? 'email' : 'sameAs'}
                  rel="me"
                  target="_blank"
                >
                  <TypographySpan>{content}</TypographySpan>
                </a>
              </li>
            )
          )
        })
      }
    </ul>
  </div>
</header>

<style>
  @import '@/styles/mixins.css';
  @import '@/styles/media.css';

  .header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-bottom: 0.5rem;
    gap: 0.4rem;
    text-align: center;

    & p {
      max-width: none;
    }
  }

  .header-name {
    font-size: var(--text-3xl);
    line-height: var(--text-3xl--line-height);
  }

  .location-text {
    font-family: var(--font-family-heading);
  }

  .location {
    max-width: none;
    padding: 0;
    margin: 0;
    font-size: var(--text-base);
    line-height: var(--text-base--line-height);
  }

  .contacts-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0;
    margin: 0;
    gap: 0.5rem;
    list-style-type: none;
  }

  .contacts-item {
    display: flex;
    align-items: center;
    gap: 0.2rem;

    & span {
      font-size: 0.8125rem;
    }

    & svg {
      width: 0.8rem;
      height: 0.8rem;
    }
  }

  .contacts-link {
    @mixin link-underline;
    @mixin focus;

    color: var(--c-text-primary);
  }

  @media print {
    .contacts-link {
      text-decoration-thickness: 1px;
    }
  }
</style>
