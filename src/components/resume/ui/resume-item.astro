---
import { getLocale, t } from '@/app/i18n'
import { getTestId } from '@/shared/functions/getTestId'

import { getTotalDurationText } from '../functions/getTotalDurationText'

interface Props {
  company: string
  companyLink: string
  dateEnd?: Date
  dateStart: Date
  position: string
  location: {
    country: string
    type: 'on-site' | 'remote' | 'hybrid'
  }
}

const { company, companyLink, dateEnd, dateStart, location, position } = Astro.props

const dateStartText = dateStart.toLocaleDateString(getLocale(Astro.currentLocale), {
  month: 'short',
  year: 'numeric'
})

const dateEndText =
  dateEnd?.toLocaleDateString(getLocale(Astro.currentLocale), {
    month: 'short',
    year: 'numeric'
  }) || t(Astro.currentLocale, 'present')

const locale = getLocale(Astro.currentLocale)
---

<div class="resume-item">
  <div>
    <a class="resume-item__company" href={companyLink}>{company}</a>
    <h3 class="resume-item__position">
      {position}
    </h3>
  </div>
  <div>
    <div class="resume-item__location">{location.country} | {t(Astro.currentLocale, location.type)}</div>
    <div class="resume-item__time">
      <time datetime={dateStart.toISOString()}>{dateStartText}</time>
      {' - '}
      <time datetime={dateEnd?.toISOString()}>{dateEndText}</time>
      <span class="resume-item__duration" data-testid={getTestId('resume-item-duration')}>
        ({getTotalDurationText(dateStart, dateEnd, locale)})
      </span>
    </div>
  </div>
</div>

<div class="resume-item__description">
  <slot />
</div>

<style>
  @import '@/app/styles/mixins.css';

  .resume-item {
    display: flex;
    width: 100%;
    max-width: var(--max-content-width);
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .resume-item__company {
    @mixin focus;
    @mixin link-underline;

    color: var(--c-text-secondary);
    font-size: var(--text-xs);
    line-height: var(--text-xs--line-height);
  }

  .resume-item__location {
    font-size: var(--text-xs);
    font-weight: 400;
    line-height: var(--text-xs--line-height);
  }

  .resume-item__position {
    margin: 0;
    font-size: var(--text-lg);
    line-height: 1.3;
  }

  .resume-item__description {
    --description-gap: 0.5rem;

    max-width: var(--max-content-width);
    margin-top: var(--description-gap);

    @media print {
      --description-gap: 0.2rem;
    }

    & :global(ul) {
      padding-left: 0;
      margin-top: var(--description-gap);
      list-style: inside;
    }

    & :global(p) {
      &:not(:first-of-type) {
        margin-top: var(--description-gap);
      }
    }

    & :global(strong) {
      font-weight: 600;
    }

    & :global(li:not(:first-child)) {
      margin-top: 0.25rem;
    }
  }

  .resume-item__time {
    font-size: var(--text-xs);
    font-weight: 400;
    line-height: var(--text-xs--line-height);
  }

  @media print {
    .resume-item__duration {
      display: none;
    }
  }
</style>
