---
import { getLocale, type Locale, t } from '@/i18n'

import ButtonLink from '../button-link.astro'

const locale = getLocale(Astro.currentLocale)

const fileNameByLocale: Record<Locale, string> = {
  en: 'Nikita Chernov – Resume',
  ru: 'Никита Чернов – Резюме'
}
---

<ButtonLink
  class="print-button"
  download=`${fileNameByLocale[locale]}.pdf`
  href=`/files/${fileNameByLocale[locale]}.pdf`
>
  {t(Astro.currentLocale, 'download')}
</ButtonLink>

<style>
  .print-button {
    margin: 2.5rem auto 0 auto;
  }

  @media print {
    .print-button {
      display: none;
    }
  }
</style>
