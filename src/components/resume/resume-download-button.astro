---
import { getLocale, type Locale, t } from '@/i18n'
import { RESUME_FILENAMES_BY_LOCALE } from '@/utils/constants'

import ButtonLink from '../button-link.astro'

const locale = getLocale(Astro.currentLocale)
---

<ButtonLink
  class="print-button"
  download=`${RESUME_FILENAMES_BY_LOCALE[locale]}.pdf`
  href=`/files/${RESUME_FILENAMES_BY_LOCALE[locale]}.pdf`
>
  {t(Astro.currentLocale, 'download')}
</ButtonLink>

<style>
  .print-button {
    margin: 2.5rem auto 0 auto;
  }

  @media print {
    .print-button {
      display: none;
    }
  }
</style>
