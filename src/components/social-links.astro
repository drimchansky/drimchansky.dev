---
import { siteInfo } from '@/data/site-info'

import TypographySpan from './typography/TypographySpan.astro'
---

<div class="social-links" data-nosnippet>
  {
    siteInfo.socialLinks.map(
      ({ name, showOnHomePage, url }) =>
        showOnHomePage && (
          <a class="social-link" href={url} itemprop="sameAs" rel="me" target="_blank">
            <TypographySpan>{name}</TypographySpan>
          </a>
        )
    )
  }
</div>

<style>
  @import '../styles/mixins.css';

  .social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  .social-link {
    @mixin link-underline;
    @mixin focus;

    padding: 0.25rem;
    color: var(--c-text-secondary);
    opacity: 0.8;
    transition: color var(--link-hover-duration);

    & span {
      font-size: 1.125rem;
    }

    @media (hover: hover) {
      &:hover {
        color: var(--c-text-primary);
      }
    }
  }
</style>
