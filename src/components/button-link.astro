---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {}

const { class: className, ...props } = Astro.props
---

<a class:list={['button-link', className || '']} {...props}><slot /></a>

<style>
  @import '../styles/mixins.css';

  .button-link {
    @mixin focus;

    display: block;
    max-width: 350px;
    padding: 0.5rem 3rem;
    border: none;
    border-radius: 6px;
    background-color: var(--c-button-bg-origin);
    color: var(--c-button-text);
    cursor: pointer;
    text-align: center;
    text-decoration: none;

    &:hover {
      background-color: var(--c-button-bg-hover);
    }

    &:active {
      background-color: var(--c-button-bg-active);
    }
  }
</style>
