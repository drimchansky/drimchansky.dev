---
import '@/styles/colors.css'
import '@/styles/fonts.css'
import '@/styles/global.css'
import '@/styles/properties.css'
import '@/styles/view-transitions.css'
import '@/styles/syntax-highlight.css'
import 'normalize.css'

import Head from '@/components/head.astro'
import Header from '@/components/header.astro'
import { getLocale } from '@/i18n'

interface Props {
  title: string
}

const analyticsId = import.meta.env.ANALYTICS_ID
const { title } = Astro.props
const locale = getLocale(Astro.currentLocale)
---

<!doctype html>
<html itemtype="https://schema.org/Person" lang={locale} itemscope>
  <head>
    <Head title={title} />
  </head>
  <body>
    <Header />
    <main id="main" transition:name="main">
      <slot />
    </main>

    <script
      fetchpriority="low"
      src=`https://www.googletagmanager.com/gtag/js?id=${analyticsId}`
      type="text/partytown"
      defer
      is:inline></script>

    <script define:vars={{ analyticsId }} type="text/partytown" defer is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', analyticsId)
    </script>
  </body>
</html>
