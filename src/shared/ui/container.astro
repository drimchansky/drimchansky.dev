---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {}

const { class: className, ...props } = Astro.props
---

<div class:list={['container', className]} {...props}>
  <slot />
</div>

<style>
  .container {
    width: 100%;
    max-width: var(--max-width);
    height: 100%;
    padding: 0 1rem;
    margin: 0 auto;
  }
</style>
