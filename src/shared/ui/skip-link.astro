---
import { t } from '@/app/i18n'
---

<p class="skip-link">
  <a class="skip-link__link" href="#main">{t(Astro.currentLocale, 'skipLink')}</a>
</p>

<style>
  @import '@/app/styles/mixins.css';

  .skip-link {
    padding: 0;
    margin: 0;
    background: var(--c-header-bg);
    text-align: center;
  }

  .skip-link__link {
    @mixin focus;

    display: inline-block;
    color: var(--c-text-primary);
    margin-block: 0.5rem;
    text-decoration: none;
  }

  .skip-link__link:not(:active, :focus-visible) {
    @mixin visually-hidden;
  }

  @media print {
    .skip-link__text {
      display: none;
    }
  }
</style>
