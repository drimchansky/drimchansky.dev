---
import TypographyH2 from '@/shared/ui/typography/typography-h2.astro'

type Props = {
  text: string
}

const text = Astro.props.text
---

<TypographyH2 class="resume-section-header">{text}</TypographyH2>

<style>
  .resume-section-header {
    padding: var(--resume-gap) 0;
    border-top: 1px solid var(--c-resume-separator);
    font-size: var(--text-2xl);
    line-height: 1;

    &:not(:first-of-type) {
      margin-top: var(--resume-gap);
    }
  }
</style>
